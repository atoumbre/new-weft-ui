{
  "extends": "./.svelte-kit/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "$lib": ["src/lib"],
      "$lib/*": ["src/lib/*"]
    },
    "allowJs": true,
    "checkJs": false,
    "types": ["svelte"]
  },
  "include": [
    "src/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.svelte",
    "src/**/*.js"
  ],
  "exclude": [
    "node_modules",
    ".svelte-kit",
    "dist",
    "build"
  ]
}

